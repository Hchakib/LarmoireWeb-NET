@model LarmoireWeb.ViewModels.LoginVm

@section Styles {
    <style>
        .login-card {
            background-color: #ffffff;
            border: 1px solid #e3e6ea;
            border-radius: .5rem;
            box-shadow: 0 .2rem .4rem rgba(0,0,0,0.05);
        }

        .form-label {
            font-weight: 500;
            color: #212529;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 .2rem rgba(0,123,255,0.25);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: .5rem 1.5rem;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
}

@{
    Layout = "_Layout";
    ViewData["Title"] = "Se connecter";
}

<section class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card login-card p-4">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <form asp-action="Login" asp-controller="Account" method="post" class="row g-3">
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Password" class="form-label">Mot de passe</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-12 text-center mt-3">
                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}